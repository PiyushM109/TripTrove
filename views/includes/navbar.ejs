<style>
  .btn-search {
    background-color: rgb(91, 174, 238);
    color: #ffff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;

  }

  .btn-search:hover {
    background-color: rgb(91, 174, 238);
    color: #ffff
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .btn-logout {
    background-color: rgb(91, 174, 238);
    color: #ffff;
    border-radius: 25px;
    padding: 0.5rem 0.5rem 0.5rem 1rem;
    margin-right: 0.5rem;

  }

  .btn-logout:hover {
    background-color: rgb(91, 174, 238);
    color: #ffff;
  }

  .btn-logout i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 2rem 0.5rem 3rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom ">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><i class="fa-solid fa-mountain-sun"> </i> TripTrove</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-input" type="search" placeholder="Search destinations">
          <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>

      </div>
      <div class="navbar-nav ms-auto">

        <% if(!currUser) {%>

          <form class="d-flex" action="/signup" method="get">
            <button class="btn btn-logout"><i class="fa-solid fa-user-plus"></i></button>
          </form>
          <form class="d-flex" action="/login" method="get">
            <button class="btn btn-logout"><i class="fa-solid fa-arrow-right-to-bracket"></i></i></button>
          </form>
          <% } %>
            <% if(currUser) {%>
              <form class="d-flex" action="/logout" method="get">
                <button class="btn btn-logout"><i class="fa-solid fa-arrow-right-from-bracket"></i></button>
              </form>
              <form class="d-flex" action="/listings/new" method="get">
                <button class="btn btn-logout"><i class="fa-solid fa-plus"></i></button>
              </form>
              <% } %>
      </div>
    </div>
  </div>
</nav>