<% layout("/layouts/boilerplate") -%>
    <style>
        .bd-placeholder-img {
            width: 100%;
            height: 35rem;
            border-radius: 10px;
        }

        .carousel-item h1 {
            font-size: 50px;
        }

        .btn-crs {
            color: rgb(91, 174, 238) !;
        }

        .btn-crs {
            background-color: rgb(91, 174, 238);
            color: #ffff;
            border-radius: 25px;
            padding: 0 1rem 0 1rem;

        }

        .btn-crs:hover {
            background-color: rgb(91, 174, 238);
            color: #ffff
        }

        #filters {

            display: flex;
            flex-wrap: nowrap;
            overflow-x: auto;
            overflow: hidden;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 1rem;
            opacity: 0.;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }
    </style>

    <body>
        <div id="filters">
            <div class="filter">
                <div> <i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div> <i class="fa-solid fa-bed"></i> </div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div> <i class="fa-solid fa-gopuram"></i> </div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div> <i class="fa-solid fa-umbrella-beach"></i> </div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i> </div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i> </div>
                <p>Castels</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i> </div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tents"></i> </div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tractor"></i> </div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-snowboarding"></i> </div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div> <i class="fa-solid fa-camera-retro"></i></div>
                <p>Photography Spots</p>
            </div>

            <div class="filter">
                <div> <i class="fa-solid fa-wine-bottle"></i> </div>
                <p>Vineyards</p>
            </div>

            <div class="filter">
                <div> <i class="fa-solid fa-bicycle"></i> </div>
                <p>Biking Trails</p>
            </div>

            <div class="filter">
                <div> <i class="fa-solid fa-tree"></i> </div>
                <p>Forests</p>
            </div>

            <div class="filter">
                <div><i class="fa-solid fa-monument"></i> </div>
                <p>Historical Sites</p>
            </div>

            <div class="filter">
                <div><i class="fa-solid fa-paw"></i> </div>
                <p>Wildlife</p>
            </div>

            <div class="filter">
                <div><i class="fa-solid fa-swimmer"></i> </div>
                <p>Swimming Spots</p>
            </div>

        </div>
        <div id="myCarousel" class="carousel slide mb-6 mt-4" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="bd-placeholder-img" src="<%= listings[0].image.url %>" alt="" srcset="">
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <h3>
                                <%= listings[0].title %>
                            </h3>
                            <p><a class="btn btn-lg btn-crs" href="/listings/<%= listings[0]._id %>">Learn More</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img" src="<%= listings[1].image.url %>" alt="" srcset="">
                    <div class="container">
                        <div class="carousel-caption">
                            <h3>
                                <%= listings[1].title %>
                            </h3>
                            <p><a class="btn btn-lg btn-crs" href="/listings/<%= listings[1]._id %>">Learn more</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img" src="<%= listings[2].image.url %>" alt="" srcset="">
                    <div class="container">
                        <div class="carousel-caption text-end">
                            <h3>
                                <%= listings[2].title %>
                            </h3>
                            <p><a class="btn btn-lg btn-crs" href="/listings/<%= listings[2]._id %>">Learn more</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img" src="<%= listings[3].image.url %>" alt="" srcset="">
                    <div class="container">
                        <div class="carousel-caption text-end">
                            <h3>
                                <%= listings[3].title %>
                            </h3>
                            <p><a class="btn btn-lg btn-crs" href="/listings/<%= listings[3]._id %>">Learn more</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="mt-5">
            <hr>
            <h3 style="text-align: center;">
                Best Of India
            </h3>
            <hr>
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
                <% for(let i=5; i<8; i++) { %>
                    <a href="/listings/<%= listings[i]._id %>" class="listing-link col">
                        <div class="card" style="width: 100%; height: 25rem;">
                            <img src="<%= listings[i].image.url %>" class="card-img-top" alt="listing_image">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= listings[i].title %>
                                    </b><br>
                                    price: &#8377;<%= listings[i].price.toLocaleString("en-In") %>/night
                                </p>
                            </div>
                        </div>
                    </a>
                    <% } %>
            </div>
        </div>
        <hr class="featurette-divider">
        <div style="text-align: center;">
            <h3>Trending Packages</h3>
        </div>
        <hr class="featurette-divider">

        <div class="row ">
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1">
                    <%= listings[8].title %>
                </h2>
                <p class="lead">
                    <%= listings[8].description %>
                </p>
            </div>
            <div class="col-md-5">
                <a href="/listings/<%= listings[8]._id %>" class="listing-link col"><img
                        src="<%= listings[8].image.url %>" alt="Placeholder: 500x500" width="500" height="300"
                        style="object-fit: cover; border-radius: 14px;"></a>

            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading fw-normal lh-1">
                    <%= listings[9].title %>
                </h2>
                <p class="lead">
                    <%= listings[9].description %>
                </p>
            </div>
            <div class="col-md-5 order-md-1">
                <a href="/listings/<%= listings[9]._id %>" class="listing-link col"><img
                        src="<%= listings[9].image.url %>" alt="image" width="500" height="350"
                        style="object-fit: cover; border-radius: 14px;" role="img" /></a>
            </div>

        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1">
                    <%= listings[10].title %>
                </h2>
                <p class="lead">
                    <%= listings[10].description %>
                </p>
            </div>
            <div class="col-md-5">
                <a href="/listings/<%= listings[10]._id %>" class="listing-link col"><img
                        src="<%= listings[10].image.url %>" alt="Placeholder: 500x500" width="500" height="300"
                        style="object-fit: cover; border-radius: 14px;" role="img" /></a>
            </div>

        </div>

    </body>